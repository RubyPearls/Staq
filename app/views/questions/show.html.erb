<strong><%= @question.title %></strong>
</br>

<div class="well"><%= @question.content %>

<div class="answer-list">
<% if @question.answers.any? %>
 <ul>
  <% @question.answers.each do |answer| %>
  <li><%= answer.content %>| <%= link_to "Edit", edit_question_answer_path(@question, answer) %> |

  <%= link_to "Delete", question_answer_path(@question, answer), data: {confirm: "Are you sure?", method: "delete"} %>
  </li>
  <% end %>

  </ul>
  <% else %>
  <p>There are no answers yet!</p>
<% end %>
</div>

</div>

<%= link_to "Add an Answer", new_question_answer_path(@question), remote: true %> |


<a href="/">Return to main page</a>
